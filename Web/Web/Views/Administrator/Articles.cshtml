@model IEnumerable<Web.Models.Article>
<style>
    .nav-pills > li > a {
        color: white;
    }

    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
        max-width: 300px;
    }

    .table > tbody > tr > td {
        text-align: center;
        max-width: 300px;
    }

    dl {
        text-align: center;
    }

    dd {
        color: #3C5B45;
        font-family: Arial;
        font-size: larger;
    }

    dt {
        color: #608D4E;
        font-family: Arial;
        font-size: larger;
    }

    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }

    .nav-list > li > a {
        padding: 5px 8px;
    }
</style>
<div class="col-md-12" style="display:block;height:300px;padding-left:0;padding-right:0;background-image:url(../../img/qiusuo1.jpg);background-size:cover;">

</div>
<div class="col-md-12 col-xs-12">
    <div class="col-md-2 col-xs-2">
        <ul class="nav nav-list well" style="margin-top:15%;margin-bottom:15%;font-size:small;min-width:120px">
            <li>
                <a href="/Administrator/Index">管理中心</a>
            </li>
            <li>
                <a href="/Administrator/TutorCreate">添加导师</a>
            </li>
            <li>
                <a href="/Administrator/IdentityRecords">审核认证</a>
            </li>
            <li class="nav-header">
                用户管理
            </li>
            <li>
                <a href="/Administrator/UserList">用户列表</a>
            </li>
            <li class="nav-header">
                活动管理
            </li>
            <li>
                <a href="/Administrator/Activities">活动列表</a>
            </li>
            <li>
                <a href="/Administrator/ActivityCreate">添加活动</a>
            </li>
            <li class="nav-header">
                文章管理
            </li>
            <li>
                <a href="/Administrator/Articles">文章列表</a>
            </li>
            <li>
                <a href="/Administrator/ArticleCreate">添加文章</a>
            </li>
            <li class="nav-header">
                材料管理
            </li>
            <li>
                <a href="/Administrator/Materials">材料列表</a>
            </li>
            <li>
                <a href="/Administrator/MaterialCreate">添加材料</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10 col-xs-10">

        <p>
            @Html.ActionLink("创建文章", "ArticleCreate")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "ArticleEdit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "ArticleDeleteConfirm", new { id = item.ID })
                    </td>
                </tr>
            }
        </table>
        @Html.ActionLink("回到管理主页", "Index")


    </div>
</div>
