@model IEnumerable<Web.Models.ActivityOperation>

@{
    ViewBag.Title = "Activities";
}
<style>
    .nav-pills > li > a {
        color: white;
    }

    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }

    dl {
        text-align: center;
    }

    dd {
        color: #3C5B45;
        font-family: Arial;
        font-size: larger;
    }

    dt {
        color: #608D4E;
        font-family: Arial;
        font-size: larger;
    }
</style>
<div class="col-md-2">
    <div class="navbar navbar-collapse" style="margin:50px 3%">
        <ul class="nav nav-pills nav-stacked navbar-nav" style="padding-left:0px;padding-right:0;">
            <li><a href="~/Administrator/Index">公告管理</a></li>
            <li><a href="Articles">文章管理</a></li>  
            <li><a href="Activities">活动管理</a></li>
            <li><a href="~/Administrator/IdentityRecords">用户认证管理</a></li>
            <li class="dropdown">
                <a href="~/Administrator/Materials" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">资源管理</a>
                <ul class="dropdown-menu">
                    <li><a href="~/Administrator/MaterialCreate" style="color:white;background-color:#34495E">新建资源</a></li>
                    <li><a href="~/Administrator/MaterialDelete" style="color:white;background-color:#34495E">删除资源</a></li>
                    <li><a href="~/Administrator/MaterialDetails" style="color:white;background-color:#34495E">资源细节</a></li>
                    <li><a href="~/Administrator/MaterialEdit" style="color:white;background-color:#34495E">资源编辑</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<h2>Activities</h2>

<p>
    @Html.ActionLink("Create New", "ActivityCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Limit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Limit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
