@model Web.Models.Material

@{
    ViewBag.Title = "MaterialCreate";
}
<style>
    body {padding:0px;
margin:0px;

    }
    .div {padding:7px;
          margin:7px;
    }
     .nav-pills > li > a {
        color: white;
    }
    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }
    dl{
        text-align:center;
    }
    dd{
        color:#3C5B45;
        font-family:Arial;
        font-size:larger;
    }
    dt{
        color:#608D4E;
        font-family:Arial;
        font-size:larger;
    }

</style>


<div class="col-md-2">
    <div class="navbar navbar-collapse" style="margin:50px 3%">
        <ul class="nav nav-pills nav-stacked navbar-nav" style="padding-left:0px;padding-right:0;">
            <li><a href="Index">公告管理</a></li>
            <li><a href="Articles">文章管理</a></li>
            <li><a href="Activities">活动管理</a></li>
            <li><a href="IdentityRecords">用户认证管理</a></li>
            <li class="dropdown">
                <a href="Materials" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">资源管理</a>
                <ul class="dropdown-menu">
                    <li><a href="MaterialCreate" style="color:white;background-color:#34495E">新建资源</a></li>
                    <li><a href="MaterialDelete" style="color:white;background-color:#34495E">删除资源</a></li>
                    <li><a href="MaterialDetails" style="color:white;background-color:#34495E">资源细节</a></li>
                    <li><a href="MaterialEdit" style="color:white;background-color:#34495E">资源编辑</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<div class="col-md-10">
    @using (Html.BeginForm("MaterialCreate", "Administrator", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>MaterialCreate</h4>
            <hr />
            <br />
            <br />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="file" type="file" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

   
    <br />
    <br />
    <br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
