@model Web.Models.RegisterViewModel

@{
    ViewBag.Title = "注册";
}

@using (Html.BeginForm("TutorCreate", "Administrator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
        <label class="col-md-2" for="Email"></label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入邮箱", @id = "Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
                @Html.LabelFor(model => model.DisplayName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <label class="col-md-2" for="DisplayName"></label>
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入名字", @id = "DisplayName" })
                </div>
                @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <div>
                        <label class="col-md-2" for="Password"></label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-field col-md-10", @id = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.LabelFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <div>
                        <label class="col-md-2" for="ConfirmPassword"></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-field col-md-10", @id = "ConfirmPassword" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" value="确定" class="btn btn-primary btn-lg btn-block">注册</button>
                </div>
            }

<div>
    @Html.ActionLink("返回管理主页", "Index")
    @Html.ActionLink("返回用户列表", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}