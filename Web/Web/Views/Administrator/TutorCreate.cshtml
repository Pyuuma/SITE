@model Web.Models.RegisterViewModel

@{
    ViewBag.Title = "注册";
}

<style>
    .nav-pills > li > a {
        color: white;
    }

    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }

    dl {
        text-align: center;
    }

    dd {
        color: #3C5B45;
        font-family: Arial;
        font-size: larger;
    }

    dt {
        color: #608D4E;
        font-family: Arial;
        font-size: larger;
    }
</style>
<div class="col-md-2">
    <div class="navbar navbar-collapse" style="margin:50px 50px">
        <ul class="nav nav-pills nav-stacked navbar-nav" style="padding-left:0;padding-right:0;">
            <li><a href="Index">公告管理</a></li>
            <li><a href="Articles">文章管理</a></li>
            <li><a href="Activities">活动管理</a></li>
            <li><a href="UserList">用户管理</a></li>
            <li><a href="IdentityRecords" style="padding:0 0;margin-left:">用户认证管理</a></li>
            <li class="dropdown">
                <a href="Materials" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">资源管理</a>
                <ul class="dropdown-menu">
                    <li><a href="MaterialCreate">新建资源</a></li>
                    <li><a href="MaterialDelete">删除资源</a></li>
                    <li><a href="MaterialDetails">资源细节</a></li>
                    <li><a href="MaterialEdit">资源编辑</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>
@using (Html.BeginForm("TutorCreate", "Administrator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
    @Html.AntiForgeryToken()
    <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <label class="col-md-2" for="Email"></label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入邮箱", @id = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.DisplayName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <label class="col-md-2" for="DisplayName"></label>
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入名字", @id = "DisplayName" })
                </div>
                @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <div>
                        <label class="col-md-2" for="Password"></label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-field col-md-10",  @id = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.LabelFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <div>
                        <label class="col-md-2" for="ConfirmPassword"></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-field col-md-10", @id = "ConfirmPassword" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" value="确定" class="btn btn-primary btn-lg btn-block">注册</button>
                </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}