@model Web.Models.RegisterViewModel

@{
    ViewBag.Title = "注册";
}
<style>
    .nav-pills > li > a {
        color: white;
    }

    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }

    dl {
        text-align: center;
    }

    dd {
        color: #3C5B45;
        font-family: Arial;
        font-size: larger;
    }

    dt {
        color: #608D4E;
        font-family: Arial;
        font-size: larger;
    }

    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }

    .nav-list > li > a {
        padding: 5px 8px;
    }
</style>
<div class="col-md-12" style="display:block;height:300px;padding-left:0;padding-right:0;background-image:url(../../img/qiusuo1.jpg);background-size:cover;">

</div>
<div class="col-md-12 col-xs-12">
    <div class="col-md-2 col-xs-2">
        <ul class="nav nav-list well" style="margin-top:15%;margin-bottom:15%;font-size:small;min-width:120px">
            <li>
                <a href="/Administrator/Index">管理中心</a>
            </li>
            <li>
                <a href="/Administrator/TutorCreate">添加导师</a>
            </li>
            <li>
                <a href="/Administrator/IdentityRecords">审核认证</a>
            </li>
            <li class="nav-header">
                用户管理
            </li>
            <li>
                <a href="/Administrator/UserList">用户列表</a>
            </li>
            <li class="nav-header">
                活动管理
            </li>
            <li>
                <a href="/Administrator/Activities">活动列表</a>
            </li>
            <li>
                <a href="/Administrator/ActivityCreate">添加活动</a>
            </li>
            <li class="nav-header">
                文章管理
            </li>
            <li>
                <a href="/Administrator/Articles">文章列表</a>
            </li>
            <li>
                <a href="/Administrator/ArticleCreate">添加文章</a>
            </li>
            <li class="nav-header">
                材料管理
            </li>
            <li>
                <a href="/Administrator/Materials">材料列表</a>
            </li>
            <li>
                <a href="/Administrator/MaterialCreate">添加材料</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10 col-xs-10">

        @using (Html.BeginForm("TutorCreate", "Administrator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "control-label col-md-2" } })
            <div class="form-group">
                <label class="col-md-2" for="Email"></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入邮箱", @id = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.DisplayName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
            <div class="form-group">
                <label class="col-md-2" for="DisplayName"></label>
                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control login-filed col-md-10", @placeholder = "请输入名字", @id = "DisplayName" })
            </div>
            @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "control-label col-md-2" } })
            <div class="form-group">
                <div>
                    <label class="col-md-2" for="Password"></label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control login-field col-md-10", @id = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
                @Html.LabelFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div class="form-group">
                    <div>
                        <label class="col-md-2" for="ConfirmPassword"></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-field col-md-10", @id = "ConfirmPassword" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" value="确定" class="btn btn-primary btn-lg btn-block">注册</button>
                </div>
        }

        <div>
            @Html.ActionLink("返回管理主页", "Index")
            @Html.ActionLink("返回用户列表", "Index")
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}