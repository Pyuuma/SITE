@model Web.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
}
<head>

    
   
</head>
<body style="background-image: url(/img/index_bg_img1.jpg);background-size:cover">
    <div class="container-fluid-full">
        <div class="row-fluid">
            <div class="row-fluid">
                <div class="login-box">
                    <div class="icons">
                        <a href="~/Home/Index"><i class="halflings-icon home"></i></a>
                    </div>
                    <h2 align="center">创建新账户。</h2>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="Email" class="span2 control-label">电子邮箱</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="DisplayName" class="span2 control-label">账户名</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password" class="span2 control-label">密码</label>
                            <div class="col-sm-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })<br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword" class="span2 control-label">确认密码</label>
                            <div class="col-sm-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })<br>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="button-login">
                            <button type="submit" value="注册" class="btn btn-primary">注册</button>
                        </div>

                    }

                </div><!--/span-->
            </div><!--/row-->


        </div><!--/.fluid-container-->

    </div><!--/fluid-row-->


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </body>