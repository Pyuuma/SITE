@using Web.Models
@{
    ViewBag.Title = "RecordList";
}
<style>
    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }

    .nav-list > li > a {
        padding: 5px 8px;
    }
</style>
<div class="col-md-12" style="display:block;height:300px;padding-left:0;padding-right:0;background-image:url(../../img/sushe1.JPG);background-position:center;background-size:cover;">

</div>
<div class="col-md-12 col-xs-12">
    <div class="col-md-2 col-xs-2">
        <ul class="nav nav-list well" style="margin-top:15%;margin-bottom:15%;font-size:small;min-width:120px">
            <li>
                <a href="/Manage/Index">个人中心</a>
            </li>
            <li>
                <a href="/Manage/Calendar">个人日历</a>
            </li>
            <li>
                <a href="/Manage/RecordList">显示履历</a>
            </li>
            <li class="nav-header">
                个人信息
            </li>
            <li>
                <a href="/Manage/UserProfile">修改信息</a>
            </li>
            <li>
                <a href="/Manage/UserIdentity">信息验证</a>
            </li>
            <li>
                <a href="/Manage/ChangePassword">修改密码</a>
            </li>
            <li>
                <a href="/Manage/Project">我的项目</a>
            </li>
            <li class="nav-header">
                我的团队
            </li>
            <li>
                <a href="/Manage/TeamProfile">创建团队</a>
            </li>
            <li>
                <a href="/Manage/TeamApply">申请加入</a>
            </li>
            <li>
                <a href="/Manage/TeamMember">团队成员</a>
            </li>
            <li>
                <a href="/Manage/TeamRecruit">成员管理</a>
            </li>
            <li>
                <a href="/Manage/Company">公司注册</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10 col-xs-10">
        @{
            var Educations = (List<EducationRecord>)ViewBag.Educations;
            var Works = (List<WorkRecord>)ViewBag.Works;
            <div>
                <div class="col-md-6">
                    <table class="table table-hover">
                        <caption>教育经历</caption>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(e => Educations.First().DegreeType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(e => Educations.First().School)
                            </th>
                            <th>
                                @Html.DisplayNameFor(e => Educations.First().StartYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(e => Educations.First().EndYear)
                            </th>
                        </tr>

                        @foreach (var item in Educations)
            {
                string degree = "";
                switch (item.DegreeType)
                {
                    case 1:
                        degree = "本科学历";
                        break;
                    case 2:
                        degree = "硕士学历";
                        break;
                    case 3:
                        degree = "博士学历";
                        break;
                    case 4:
                        degree = "博士以上学历";
                        break;
                }
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => degree)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.School)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndYear)
                                </td>
                            </tr>
                        }
                        <tfoot>@Html.ActionLink("添加一条教育经历", "AddEducationRecord")</tfoot>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-hover">
                        <caption>工作经历</caption>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(e => Works.First().Company)
                            </th>
                            <th>
                                @Html.DisplayNameFor(e => Works.First().StartYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(e => Works.First().EndYear)
                            </th>
                        </tr>
                        @foreach (var item in Works)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndYear)
                                </td>
                            </tr>
                        }
                        <tfoot>@Html.ActionLink("添加一条工作经历", "AddWorkRecord")</tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
</div>








